def pmn(x):
    if x<=1:
        print(f'{x} is not a prime number')
    elif x==2 :
        print(f'{x} is a prime number')
    else :
        for i in range(2, x):
            if x % i == 0:
                print(f"{x} is not a prime number")
                break
            else:
                print(f'{x} is a Prime a number')
                break


x=int(input("Enter a number : "))
pmn(x)
